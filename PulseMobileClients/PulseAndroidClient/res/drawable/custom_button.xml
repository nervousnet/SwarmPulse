<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="1dip" />

            <stroke android:width="1dip" android:color="#2c2f34" />

            <gradient android:angle="-90" android:endColor="#aa363c45" android:startColor="#aa090b0e" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="1dip" />

            <stroke android:width="1dip" android:color="#2c2f34" />

            <solid android:color="#1d242c" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="1dip" />

            <stroke android:width="1dip" android:color="#2c2f34" />

            <gradient android:angle="-90" android:endColor="#aa1d242c" android:startColor="#aa545c67" />
        </shape></item>

</selector>